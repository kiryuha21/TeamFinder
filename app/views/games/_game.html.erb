<div id="<%= dom_id game %>">
  <p>
    <strong style="color: white">Создана пользователем:</strong>
    <span style="color:white;"><%= game.creator %></span>
  </p>
  <p>
    <strong style="color: white">Название:</strong>
    <span style="color: white"><%= game.name %> </span>
  </p>

  <p>
    <strong style="color: white">Изображение:</strong> <br>
    <% if game.image.attached? %>
      <%= image_tag game.image, style: 'width: 500px;'%>
    <% else %>
      <%= image_tag 'default.jpg', style: 'width: 500px;' %>
    <% end %>
  </p>

</div>
