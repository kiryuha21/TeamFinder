<%= stylesheet_link_tag "users_common", media: "all", "data-turbolinks-track": "reload" %>

<main>

  <h1><%= t '.edit_t' %></h1>

  <br>

  <% if @current_user.nickname == @user.nickname || @current_user.is_admin %>
    <%= render "form", user: @user %>
  <% else %>
    <div class="alert alert-danger" style="width: fit-content"><%= t '.alert' %></div>
  <% end %>

  <br>

  <div>
    <h5>
      <%= link_to "#{t '.user_i'}", @user, class: 'btn btn-warning' %> <br> <br>
      <%= link_to "#{t '.user_l'}", users_path, class: 'btn btn-warning' %>
    </h5>
  </div>

</main>